<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="620.0" prefWidth="424.0" style="-fx-background-color: linear-gradient(to bottom, #A9FF82, #86FF4F);" stylesheets="file:/C:/Users/cdele/IdeaProjects/The-Challenge/src/main/resources/css/styles.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.example.app.Page.RegisterController">
    <center>
        <VBox fx:id="rootPane" alignment="CENTER" onKeyPressed="#handleEnterPress" spacing="20" style="-fx-background-color: transparent;">
            <VBox alignment="CENTER" maxWidth="300" spacing="15" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 10, 0, 0, 5);">
                <padding>
                    <Insets bottom="20" left="20" right="20" top="20" />
                </padding>
                <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2d3436;" text="SmartGreenHouse" />
                <Label style="-fx-font-size: 18px; -fx-font-weight: lighter; -fx-text-fill: #636e72;" text="Register" />

                <!-- Invoervelden -->
                <TextField fx:id="fullNameField" prefWidth="250" promptText="Username" style="-fx-background-radius: 10; -fx-background-color: #f0f0f0; -fx-padding: 5;" />
                <TextField fx:id="emailField" prefWidth="250" promptText="Email" style="-fx-background-radius: 10; -fx-background-color: #f0f0f0; -fx-padding: 5;" />
                <PasswordField fx:id="passwordField" prefWidth="250" promptText="Password" style="-fx-background-radius: 10; -fx-background-color: #f0f0f0; -fx-padding: 5;" />

                <!-- Nieuwe confirm password veld -->
                <PasswordField fx:id="confirmPasswordField" prefWidth="250" promptText="Confirm Password" style="-fx-background-radius: 10; -fx-background-color: #f0f0f0; -fx-padding: 5;" />

                <!-- Register knop gekoppeld aan de handleRegister methode -->
                <Button onAction="#handleRegister" prefWidth="200" styleClass="button" text="Register" />

                <!-- Back to Login knop -->
                <Button onAction="#switchToLogin" prefWidth="200" styleClass="secondary-button" text="Back to Login" />
            </VBox>
        </VBox>
    </center>
</BorderPane>
