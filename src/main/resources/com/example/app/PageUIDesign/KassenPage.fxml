<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Pane prefHeight="620.0" prefWidth="424.0" style="-fx-background-color: #FFFFFF;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.app.Page.KassenPage">
   <children>
      <!-- Groene header sectie -->
      <Pane prefHeight="105.0" prefWidth="424.0" style="-fx-background-color: #A9FF82;">
         <children>
            <!-- Titel van de pagina -->
            <Label alignment="CENTER" layoutX="116.0" layoutY="15.0" prefHeight="74.0" prefWidth="192.0" text="Kassen" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="52.0" />
               </font>
            </Label>
            <!-- Lichte groene scheidingslijn onder de header -->
            <Pane layoutY="98.0" prefHeight="10.0" prefWidth="424.0" style="-fx-background-color: #86FF4F;" />
         </children>
      </Pane>

      <!-- VBox voor de dynamische data (kas boxen) -->
      <VBox fx:id="dataBox" layoutX="10.0" layoutY="120.0" prefHeight="400.0" prefWidth="404.0" spacing="10" style="-fx-padding: 10; -fx-background-color: white;">
         <!-- Dynamisch toegevoegde kasboxen komen hier -->
      </VBox>

      <!-- Ga terug knop -->
      <Button fx:id="goBackButton" layoutX="14.0" layoutY="540.0" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 18;" text="←" />

      <!-- Voeg Kas Knop (plus knop) rechts onderin -->
      <Button fx:id="addKasButton" layoutX="187.0" layoutY="535.0" prefHeight="50.0" prefWidth="50.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 18;" text="+" />
      <Button fx:id="goBackButton1" layoutX="310.0" layoutY="540.0" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 18;" text="→" />
   </children>
</Pane>
